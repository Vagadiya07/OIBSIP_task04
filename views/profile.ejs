<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Custom CSS here */
        .profile-circle img {
            border: 5px solid white;
        }
    </style>
</head>
<body class="bg-gray-100">
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-body text-center">
                        <div class="profile-circle mx-auto mb-3">
                            <img src="/images/me.jpg" alt="Profile Photo" class="rounded-circle w-75">
                        </div>
                        <h4 class="card-title"><%= user.username %></h4>
                        <p class="card-text"><%= user.fullname %></p>
                        <a href="/logout" class="btn btn-danger">Log Out</a>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="row">
                    <% user.posts.forEach(function(post) { %>
                        <div class="col-md-4">
                            <div class="card mb-3">
                                <img src="/images/uploads/<%= post.image %>" alt="Posted Image" class="card-img-top">
                                <div class="card-body">
                                    <p class="card-text"><%= post.imgText %></p>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
        <!-- Upload Form -->
        <div class="row mt-5">
            <div class="col-md-8 offset-md-4">
                <form action="/upload" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" name="imgcaption" placeholder="Write image caption" class="form-control mb-2">
                    </div>
                    <div class="form-group">
                        <input type="file" name="file" class="form-control-file mb-2">
                    </div>
                    <button type="submit" class="btn btn-primary">Upload</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
